<% if link.present? %>
  <%= link_to link, class: button_class, "data-turbo-frame": myframe do %>
    <i class="<%= icon %>"></i>
    <span class="badge text-bg-white"><%= count %></span>
  <% end %>
<% else %>
<button type="button" class="<%= button_class %>">
  <i class="<%= icon %>"></i>
  <span class="badge text-bg-white"><%= count %></span>
</button>
<% end %>
