<div id="reboot_<%= dom_id(connector) %>" class="d-inline-flex mx-3">
  <% if connector.rebooted? %>
    <button class="btn btn-danger" type="button" disabled>
      <span class="spinner-border spinner-border-sm" aria-hidden="true"></span>
      <span class="visually-hidden" role="status">stay tuned...</span>
    </button>
  <% else %>
    <%= button_to( reboot_connector_path(connector),
                   method: :post,
                   title: t('cocard.reboot'),
                   class: "btn btn-danger",
                    form: {
                      data: {
                        "turbo-confirm": t('connectors.do_reboot')
                      }
                    }) do %>
      <i class="fa-solid fa-power-off"></i>
    <% end %>
  <% end %>
</div>
