<div class="container mt-3">
  <div class="card">
    <div class="card-header">
      <h4><%= @title %></h4>
    </div>
    <div class="card-body">
      <%= content %>
    </div>
    <% if @back.present? %>
      <div class="card-footer">
        <%= link_to "Back", @back %>
      </div>
    <% end %>
  </div>
</div>

