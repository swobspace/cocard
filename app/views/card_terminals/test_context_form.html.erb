<%= render FormComponent.new(title: "Kontext-Prüfung für Kartenterminal #{@card_terminal}") do %>
  <%= simple_form_for(@context, url: test_context_card_terminal_path(@card_terminal)) do |form| %>
    <%= form.error_notification message: form.object.errors[:base].to_sentence if form.object.errors[:base].present? %>

    <div class="form-input">
      <%= form.input :mandant
         %>
      <%= form.input :client_system
         %>
      <%= form.input :workplace
         %>

      <%= form.button :submit, "Kontext prüfen", class: 'btn btn-primary' %>
      <%= cancel_button %>
    </div>
  <% end %>


<% end %>
