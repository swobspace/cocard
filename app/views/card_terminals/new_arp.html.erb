<%= turbo_stream_from :arp_check %>

<%= turbo_frame_tag :new_arp do %>
  <%= render FormComponent.new(title: t('attributes.arp_check')) do %>
    <%= form_tag(arp_check_card_terminals_path, role: 'form') do |f| %>
      <div class="mb-3">
        <%= label_tag :arp_list, t('attributes.arp_list'), 
                      class: "form-label" %>
        <%= text_area_tag :arp_list, nil, class: "form-control" %>
        <div class="form-text">
          Format: &lt;ip&gt; &lt;mac&gt;, z.B. 192.0.2.4 00:0a:0d:12:34:56
         </div>
      </div>

      <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" value="" id="checkDefault">
        <%= check_box_tag :only_differences, 1, checked: true, class: 'form-check-input' %>
        <%= label_tag :only_differences, "nur Abweichungen", class: 'form-check-label'%>
      </div>

      <button type="submit" class="btn btn-primary">Absenden</button>
    <% end %>
  <% end %>
<% end %>


<div class="container">
  <div id="arp-checked" class="my-3">
  </div>
