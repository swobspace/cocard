<%= render 'shared/turbo-cache-control' %>

<div data-controller="datatables">
  <%= content_tag :table, role: :datatable,
        id: "card_terminals_subtable",
        class: "table table-sm table-responsive",
        data: {
          'datatables-target': 'datatable',
          order: [[0, 'asc']].to_json
        } do %>
    <thead>
      <tr>
            <th class="text-start"><%= t('attributes.condition') %></th>
            <th class="notvisible"><%= t('attributes.condition_message') %></th>
            <th><%= t('attributes.name') %></th>
            <th class="notvisible"><%= t('attributes.displayname') %></th>
            <th class="text-center">SMC-B?</th>
            <th class="notvisible"><%= t('attributes.connector') %></th>
            <th><%= t('attributes.ct_id') %></th>
            <th><%= t('attributes.mac') %></th>
            <th class="notvisible"><%= t('attributes.serial') %></th>
            <th><%= t('attributes.ip') %></th>
            <th><%= t('attributes.connected') %></th>
            <th><%= t('attributes.location') %></th>
            <th><%= t('attributes.room') %></th>
            <th><%= t('attributes.plugged_in') %></th>
            <th><%= t('attributes.last_ok') %></th>
            <th class="notvisible"><%= t('attributes.last_check') %></th>
            <th class="nosort notvisible">SMC-KT <%= t('attributes.iccsn') %></th>
            <th class="nosort notvisible">SMC-KT <%= t('attributes.expiration_date') %></th>
            <th class="nosort notvisible">SMC-KT <%= t('attributes.object_system_version') %></th>

      </tr>
    </thead>
    <tfoot class="search">
      <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
      </tr>
    </tfoot>
    <tbody>
      <% card_terminals.each do |card_terminal| %>
        <%= content_tag(:tr, id: dom_id(card_terminal), class: dom_class(card_terminal)) do %>
          <td class="text-start">
            <%= render ConditionIconComponent.new(item: card_terminal, as_text: true) %>
            <span style="visibility:hidden;"><%= card_terminal.condition %></span>
          </td>
          <td><%= card_terminal.condition_message %></td>
          <td><%= card_terminal.name %></td>
          <td><%= truncate(card_terminal.displayname, length: 50) %></td>
          <td class="text-center">
            <%= render BooleanComponent.new(value: card_terminal.has_smcb?, 
                                            text: :unicode) %>
          </td>
          <td><%= render LinkToComponent.new(item: card_terminal.connector) %></td>
          <td><%= link_to card_terminal.ct_id, 
                          card_terminal_path(card_terminal),
                          class: 'primary-link',
                          data: { 'turbo-frame' => '_top', 'turbo-prefetch' => true }
               %></td>
          <td><%= card_terminal.mac %></td>
          <td><%= card_terminal.serial %></td>
          <td><%= card_terminal.ip %></td>
          <td class="text-center">
            <%= render BooleanComponent.new(value: card_terminal.connected, 
                                            text: :unicode) %>
          </td>
          <td><%= card_terminal.location&.lid %></td>
          <td><%= card_terminal.room %></td>
          <td><%= card_terminal.plugged_in %></td>
          <td><%= render IsCurrentComponent.new(item: card_terminal, attr: :last_ok) %></td>
          <td><%= render IsCurrentComponent.new(item: card_terminal, attr: :last_check) %></td>
          <td><%= card_terminal.smckt&.iccsn.to_s %></td>
          <td><%= render ExpirationDateComponent.new(item: card_terminal.smckt) %></td>
          <td><%= card_terminal.smckt&.object_system_version %></td>
        <% end %>
      <% end %>
    </tbody>
  <% end %>
</div>
