<%= render 'shared/turbo-cache-control' %>

<h1><%= t('controller.terminal_workplaces') %></h1>


<div data-controller="datatables">
  <%= content_tag :table, role: :datatable,
        id: "terminal_workplaces_table",
        class: "table table-sm table-responsive",
        data: {
          'datatables-target': 'datatable',
          order: [[0, 'asc']].to_json
        } do %>
    <thead>
      <tr>
        <th class="text-center"><%= t('attributes.location') %></th>
        <th class="text-center"><%= t('attributes.condition') %></th>
        <th><%= t('attributes.card_terminal') %></th>
        <th><%= t('attributes.ip') %></th>
        <th><%= t('attributes.workplace') %></th>
        <th><%= t('attributes.description') %></th>
        <th><%= t('attributes.mandant') %></th>
        <th><%= t('attributes.client_system') %></th>
        <th><%= t('attributes.updated_at') %></th>
      </tr>
    </thead>
    <tfoot class="search">
      <tr>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </tfoot>
    <tbody>
      <% @terminal_workplaces.each do |twp| %>
        <%= content_tag(:tr, id: dom_id(twp)) do %>
          <td class="text-center"><%= twp.card_terminal&.location&.lid %></td>
          <td class="text-center"><%= render ConditionIconComponent.new(item: twp.card_terminal, as_text: true) %>
          <td>
            <%= render LinkToComponent.new(item: twp.card_terminal, label_method: :name) %>
          </td>
          <td><%= twp.card_terminal&.ip %></td>
          <td><%= render LinkToComponent.new(item: twp.workplace) %>
          <td><%= truncate(twp.workplace.description.to_plain_text, length: 300) %></td>
          <td><%= twp.mandant %></td>
          <td><%= twp.client_system %></td>
          <td><%= render IsCurrentComponent.new(item: twp, attr: :updated_at,
                                                relative: true)%></td>

        <% end %>
      <% end %>
    </tbody>
  <% end %>
</div>
