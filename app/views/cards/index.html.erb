<%= render 'shared/turbo-cache-control' %>

<h1><%= t('controller.cards') %></h1>

<div data-controller="datatables">
  <%= content_tag :table, role: :datatable,
        id: "cards_table",
        class: "table table-bordered table-responsive-xl",
        data: {
          'datatables-target': 'datatable',
          order: [[0, 'asc']].to_json
        } do %>
    <thead>
      <tr>
            <th><%= t('attributes.name') %></th>
            <th class="nosort"><%= t('mirco.action') %></th>
      </tr>
    </thead>
    <tfoot class="search">
      <tr>
            <th></th>
            <th class="nosearch"></th>
      </tr>
    </tfoot>
    <tbody>
      <% @cards.each do |card| %>
        <%= content_tag(:tr, id: dom_id(card), class: dom_class(card)) do %>
                <td><%= card.name %></td>
                <td class="text-nowrap">
            <%= show_link card %>
            <%= edit_link card %>
            <%= delete_link card %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  <% end %>
</div>

<br />

<%= back_link %>
<%= new_link Card %>
