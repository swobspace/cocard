<% if can? :navigate, :connectors %>
  <li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle <%= active_class('connectors') %>" 
       href="#" id="navbarConnectorDropdown" data-bs-toggle="dropdown" 
       aria-haspopup="true" aria-expanded="false" >

      <%= t('controller.connectors') %>
    </a>
    <div class="dropdown-menu" aria-labelledby="navbarConnectorDropdown">
      <%= link_to raw( '<span class="fas fa-fw fa-table" aria-hidden="true"></span> ' +
            t('controller.connectors')),
          main_app.connectors_path, class: "dropdown-item" %>
      <div class="dropdown-divider"></div>
      <%= link_to raw( '<span class="fa-solid fa-fw fa-person-digging" aria-hidden="true"></span> ' +
            t('controller.connectors')),
          main_app.connectors_path(acknowledged: true), class: "dropdown-item" %>
      <% if current_user&.is_admin? %>
        <%= link_to raw( '<span class="fa-solid fa-fw fa-trash" aria-hidden="true"></span> ' +
              t('connectors.deleted')), main_app.connectors_path(deleted: true),
              class: "dropdown-item" %>
      <% end %>

      <% if can? :create, Connector %>
        <div class="dropdown-divider"></div>
        <%= link_to raw('<span class="fas fa-fw fa-plus" aria-hidden="true"></span> ' +
                        t('cocard.new_connector')),
              main_app.new_connector_path,
              class: "dropdown-item" %>
      <% end %>
    </div>
  </li>
<% end %>


