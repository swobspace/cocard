<div class="me-2">
  <%= render ConditionBadgeComponent
             .new(state: Cocard::States::OK,
                  count: Connector.ok.current.count,
                  link:  sindex_connectors_path(condition: Cocard::States::OK),
                  myframe: 'connectors') %>
</div>
