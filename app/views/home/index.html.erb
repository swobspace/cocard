<% if @current_user.present? %>
  <div class="row">
    <div class="col-xxl-6">
      <div class="card mt-3">
        <div class="card-header">
          <div class="row">
            <div class="col-xs-5 col-md-4 col-ml-3">
            <h4 class="me-4 pt-1">Connector Status</h4>
            </div>
            <div class="d-flex col-xs-7 col-md-8 col-ml-9">
              <%= render 'connector_states' %>
            </div>
          </div>
        </div>
        <div>
          <%= turbo_frame_tag("connectors", src: sindex_connectors_path) %>
        </div>
      </div>
    </div>

    <div class="col-xxl-6">
      <div class="card mt-3">
        <div class="card-header">
          <div class="row">
            <div class="col-xs-5 col-md-4 col-ml-3">
              <h4 class="me-4 pt-1">Event Log</h4>
            </div>
            <div class="d-flex col-xs-7 col-md-8 col-ml-9">
              <%# render 'log_states' %>
            </div>
          </div>
        </div>
        <div>
          <%= turbo_frame_tag("logs", src: sindex_logs_path) %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xxl-6">
      <div class="card mt-3">
        <div class="card-header">
          <div class="row">
            <div class="col-xs-5 col-md-4 col-ml-3">
              <h4 class="me-4 pt-1">Card Terminal Status</h4>
            </div>
            <div class="d-flex col-xs-7 col-md-8 col-ml-9">
              <%= render 'card_terminal_states' %>
            </div>
          </div>
        </div>
        <div>
          <%= turbo_frame_tag("card_terminals", src: sindex_card_terminals_path) %>
        </div>
      </div>
    </div>

    <div class="col-xxl-6">
      <div class="card mt-3">
        <div class="card-header">
          <div class="row">
            <div class="col-xs-5 col-md-4 col-ml-3">
              <h4 class="me-4 pt-1">Card Status</h4>
            </div>
            <div class="d-flex col-xs-7 col-md-8 col-ml-9">
              <%= render 'card_states' %>
            </div>
          </div>
        </div>
        <div>
          <%= turbo_frame_tag("cards", src: sindex_cards_path) %>
        </div>
      </div>
    </div>
  <% else %>
    <p>
     Sie sind nicht eingeloggt.
     <%= link_to "Bitte loggen Sie sich ein", wobauth.new_user_session_path %>
    </p>
  <% end %>
