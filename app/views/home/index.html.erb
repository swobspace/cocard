<%= turbo_stream_from :home_index %>
<div class="container-xl">

  <div class="card mt-3">
    <div class="card-header">
      <div class="row">
        <div class="col-xs-4 col-md-3 col-ml-2">
        <h4 class="me-4 pt-1">Connector Status</h4>
        </div>
        <div class="d-flex col-xs-8 col-md-9 col-ml-10">
          <%= render 'connector_states' %>
        </div>
      </div>
    </div>
    <div>
      <%= render 'connectors', connectors: @connectors %>
    </div>
  </div>

  <div class="card mt-3">
    <div class="card-header">
      <div class="row">
        <div class="col-xs-4 col-md-3 col-ml-2">
          <h4 class="me-4 pt-1">Card Terminal Status</h4>
        </div>
        <div class="d-flex col-xs-8 col-md-9 col-ml-10">
          <%= render 'card_terminal_states' %>
        </div>
      </div>
    </div>
    <div>
      <%= render 'card_terminals', card_terminals: @card_terminals %>
    </div>
  </div>
</div>
