  <%= render ConditionBadgeComponent
             .new(state: Cocard::States::WARNING,
                  count: CardTerminal.warning.current.count,
                  link:  sindex_card_terminals_path(condition: Cocard::States::WARNING),
                  myframe: 'card_terminals') %>
</div>
<div class="me-2">
  <%= render ConditionBadgeComponent
             .new(state: Cocard::States::CRITICAL,
