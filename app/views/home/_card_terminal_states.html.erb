<div class="me-2">
  <%= render ConditionBadgeComponent
             .new(state: Cocard::States::OK,
                  count: CardTerminal.ok.current.count,
                  link:  sindex_card_terminals_path(condition: Cocard::States::OK),
                  myframe: 'card_terminals') %>
</div>
