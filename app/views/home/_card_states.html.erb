<div class="me-2">
  <%= render ConditionBadgeComponent
             .new(state: Cocard::States::OK,
                  count: Card.ok.current.count,
                  link:  sindex_cards_path(condition: Cocard::States::OK),
                  myframe: 'cards') %>
</div>
