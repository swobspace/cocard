<div class="me-2">
  <%= link_to sindex_cards_path(acknowledged: 'true'),
              class: 'btn btn-outline-secondary',
              "data-turbo-frame": 'cards' do %>
    <i class="fa-solid fa-person-digging"></i>
    <span class="badge text-bg-secondary">
      <%= Card.acknowledged.count %>
    </span>
  <% end %>
</div>

