<div class="card mb-3">
  <div class="card-header">
    <div class="d-flex w-100 justify-content-between">
      <div>
        <span class="subtitle">
          <%= t('activerecord.models.context') %>: 
          #<%= @context.id %>
        </span>
        <h4 class="title"><%= @context %></h4>
      </div>
      <div role="toolbar" class="pt-3">
        <%= edit_link(@context) %>
        <%= delete_link(@context) %>
      </div>
    </div>
  </div>

  <div class="card-body">
    <table class="table table-sm table-borderless">
    
      <tr>
        <th class="w-10 pe-3"><%= t('attributes.mandant')%>:</th>
        <td><%= @context.mandant %></td>
      </tr>

      <tr>
        <th class="w-10 pe-3"><%= t('attributes.client_system')%>:</th>
        <td><%= @context.client_system %></td>
      </tr>

      <tr>
        <th class="w-10 pe-3"><%= t('attributes.workplace')%>:</th>
        <td><%= @context.workplace %></td>
      </tr>

      <tr>
        <th class="w-10 pe-3"><%= t('attributes.description')%>:</th>
        <td><%= @context.description %></td>
      </tr>

      <tr>
        <th class="w-10 pe-3"><%= t('cocard.cards_count')%>:</th>
        <td><%= @context.cards.count %></td>
      </tr>

      <tr>
        <th class="w-10 pe-3"><%= t('cocard.connectors_count')%>:</th>
        <td><%= @context.connectors.count %></td>
      </tr>
    </table>
  </div>
</div>

<%= back_link %>

<div class="card my-3">
  <div class="card-header">
    <div class="d-flex w-100">
      <div >
        <h4 class="title"> 
          SMC-B
        </h4>
      </div>
    </div>
  </div>
  <div class="m-2">
    <%= render 'cards', cards: @cards %>
    <% if @pagy_cards.pages > 1 %>
      <div class="mt-3 ms-3">
        <%== pagy_bootstrap_nav(@pagy_cards) %>
      </div>
    <% end %>
  </div>
</div>

<div class="card my-3">
  <div class="card-header">
    <div class="d-flex w-100">
      <div >
        <h4 class="title"> 
          <%= t('controller.connectors') %>
        </h4>
      </div>
    </div>
  </div>
  <div class="m-2">
    <%= render 'connectors', connectors: @connectors %>
    <% if @pagy_connectors.pages > 1 %>
      <div class="mt-3 ms-3">
        <%== pagy_bootstrap_nav(@pagy_connectors) %>
      </div>
    <% end %>
  </div>
</div>


