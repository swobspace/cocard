<%= simple_form_for(@ti_client) do |form| %>
<%= form.error_notification message: form.object.errors[:base].to_sentence if form.object.errors[:base].present? %>

  <div class="form-input">
    <%= form.association :connector
       %>
    <%= form.input :name
       %>
    <%= form.input :url
       %>
    <%= form.input :client_id, as: :string, disabled: true
       %>
    <%= form.input :client_secret, as: :password
       %>

    <%= form.button :submit, class: 'btn btn-primary' %>
    <%= cancel_button %>
  </div>
<% end %>
