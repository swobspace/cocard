<%= render 'shared/turbo-cache-control' %>

<h1><%= t('controller.ti_clients') %></h1>

<div data-controller="datatables">
  <%= content_tag :table, role: :datatable,
        id: "ti_clients_table",
        class: "table table-bordered table-responsive-xl",
        data: {
          'datatables-target': 'datatable',
          order: [[0, 'asc']].to_json
        } do %>
    <thead>
      <tr>
            <th><%= t('attributes.connector') %></th>
            <th><%= t('attributes.name') %></th>
            <th><%= t('attributes.url') %></th>
            <th class="nosort"><%= t('cocard.action') %></th>
      </tr>
    </thead>
    <tfoot class="search">
      <tr>
            <th></th>
            <th></th>
            <th></th>
            <th class="nosearch"></th>
      </tr>
    </tfoot>
    <tbody>
      <% @ti_clients.each do |ti_client| %>
        <%= content_tag(:tr, id: dom_id(ti_client), class: dom_class(ti_client)) do %>
                <td><%= link_to ti_client.connector,
                                ti_client.connector,
                                class: 'primary-link'
                     %></td>
                <td><%= link_to ti_client.name,
                                ti_client,
                                class: 'primary-link'
                     %></td>
                <td><%= ti_client.url %></td>
                <td class="text-nowrap">
            <%= show_link ti_client %>
            <%= edit_link ti_client %>
            <%= delete_link ti_client %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  <% end %>
</div>

<br />

