<%= simple_form_for(@network) do |form| %>
<%= form.error_notification message: form.object.errors[:base].to_sentence if form.object.errors[:base].present? %>

  <div class="form-input">
    <%= form.input :netzwerk, as: :string
       %>
    <%= form.input :description, as: :rich_text_area
       %>
    <%= form.association :location
       %>

    <%= form.input :accessibility,
          collection: Network.accessibilities
                        .collect {|c| [t(c[0], scope: 'accessibilities'), c[0]]},
          include_blank: false
       %>


    <%= form.button :submit, class: 'btn btn-primary' %>
    <%= cancel_button %>
  </div>
<% end %>
