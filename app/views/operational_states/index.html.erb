<%= render 'shared/turbo-cache-control' %>

<h1><%= t('controller.operational_states') %></h1>

<div data-controller="datatables">
  <%= content_tag :table, role: :datatable,
        id: "operational_states_table",
        class: "table table-bordered table-responsive-xl",
        data: {
          'datatables-target': 'datatable',
          order: [[0, 'asc']].to_json
        } do %>
    <thead>
      <tr>
            <th><%= t('attributes.name') %></th>
            <th><%= t('attributes.description') %></th>
            <th><%= t('attributes.operational') %></th>
            <th class="nosort"><%= t('cocard.action') %></th>
      </tr>
    </thead>
    <tfoot class="search">
      <tr>
            <th></th>
            <th></th>
            <th></th>
            <th class="nosearch"></th>
      </tr>
    </tfoot>
    <tbody>
      <% @operational_states.each do |operational_state| %>
        <%= content_tag(:tr, id: dom_id(operational_state), class: dom_class(operational_state)) do %>
                <td><%= operational_state.name %></td>
                <td><%= operational_state.description %></td>
                <td><%= operational_state.operational %></td>
                <td class="text-nowrap">
            <%= show_link operational_state %>
            <%= edit_link operational_state %>
            <%= delete_link operational_state %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  <% end %>
</div>

<br />

<%= back_link %>
<%= new_link OperationalState %>
