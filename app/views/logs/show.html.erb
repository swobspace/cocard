<div class="card mb-2">
  <div class="card-header">
    <div class="d-flex w-100 justify-content-between">
      <div>
        <span class="subtitle">
          <%= t('activerecord.models.log') %>: 
          #<%= @log.id %>
        </span>
        <h4 class="title"><%= @log %></h4>
      </div>
      <div role="toolbar" class="pt-3">
        <%= edit_link(@log) %>
        <%= delete_link(@log) %>
      </div>
    </div>
  </div>

  <div class="card-body">
    <table class="table table-sm table-borderless">
    
      <tr>
        <th class="w-10 pe-3"><%= t('attributes.loggable')%>:</th>
        <td><%= @log.loggable %></td>
      </tr>

      <tr>
        <th class="w-10 pe-3"><%= t('attributes.action')%>:</th>
        <td><%= @log.action %></td>
      </tr>

      <tr>
        <th class="w-10 pe-3"><%= t('attributes.when')%>:</th>
        <td><%= @log.when %></td>
      </tr>

      <tr>
        <th class="w-10 pe-3"><%= t('attributes.level')%>:</th>
        <td><%= @log.level %></td>
      </tr>

      <tr>
        <th class="w-10 pe-3"><%= t('attributes.message')%>:</th>
        <td><%= @log.message %></td>
      </tr>
    </table>
  </div>
</div>

<%= back_link %>
<%= new_link Log %>
