<%= turbo_frame_tag('notes') do %>
 <% if @notes.any? %>
  <div class="card mt-3">
    <div class="card-header">
      <div class="row">
        <div class="col-xs-5 col-md-4 col-ml-3">
          <h4 class="me-4 pt-1">Logs</h4>
        </div>
        <div class="d-flex col-xs-7 col-md-8 col-ml-9">
        </div>
      </div>
    </div>
    <div>
      <table class="table">
        <thead>
          <tr>
            <th><%= t('attributes.created_at') %></th>
            <th><%= t('attributes.type') %></th>
            <th><%= t('attributes.message') %></th>
            <th><%= t('attributes.valid_until') %></th>
            <th><%= t('attributes.user') %></th>
            <th class="nosort text-end"><%= t('cocard.action') %></th>
          </tr>
        </thead>
        <tbody>
          <%= render @notes %>
        </tbody>
      </table>
    </div>
    <% if @pagy.pages > 1 %>
      <div class="mt-3 ms-3">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    <% end %>
  </div>
 <% end %>
<% end %>
