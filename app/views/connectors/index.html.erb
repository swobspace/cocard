<%= render 'shared/turbo-cache-control' %>

<h1><%= t('controller.connectors') %></h1>

<div data-controller="datatables">
  <%= content_tag :table, role: :datatable,
        id: "connectors_table",
        class: "table table-bordered table-responsive-xl",
        data: {
          'datatables-target': 'datatable',
          order: [[0, 'asc']].to_json
        } do %>
    <thead>
      <tr>
            <th><%= t('attributes.name') %></th>
            <th><%= t('attributes.ip') %></th>
            <th><%= t('attributes.sds_url') %></th>
            <th class="notvisible"><%= t('attributes.manual_update') %></th>
            <th><%= t('attributes.locations') %></th>
            <th class="nosort"><%= t('mirco.action') %></th>
      </tr>
    </thead>
    <tfoot class="search">
      <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th class="nosearch"></th>
      </tr>
    </tfoot>
    <tbody>
      <% @connectors.each do |connector| %>
        <%= content_tag(:tr, id: dom_id(connector), class: dom_class(connector)) do %>
                <td><%= connector.name %></td>
                <td><%= connector.ip %></td>
                <td><%= connector.sds_url %></td>
                <td><%= connector.manual_update %></td>
                <td><%= connector.locations.map(&:lid).join('; ') %></td>
                <td class="text-nowrap">
            <%= show_link connector %>
            <%= edit_link connector %>
            <%= delete_link connector %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  <% end %>
</div>

<br />

<%= back_link %>
<%= new_link Connector %>
