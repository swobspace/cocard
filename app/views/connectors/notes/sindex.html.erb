<%= turbo_frame_tag('side_notes') do %>
    <div class="text-end mt-2 mb-1">
      <% if can? :create, Note %>
        <%= link_to(t('cocard.new_note'), new_polymorphic_path([@notable, :note]),
                    class: 'btn btn-sm btn-outline-secondary',
                    data: {"turbo-frame" => "modal"}) %>
        <%= link_to(t('cocard.new_mail'), 
                    new_polymorphic_path([@notable, :note], params: { mail: 1 }),
                    class: 'btn btn-sm btn-outline-secondary',
                    data: {"turbo-frame" => "modal"}) if Cocard.use_mail? %>
      <% end %>
      <%= link_to raw(%Q[<i class="fas fa-table"></i>]),
                      '#notes-tab',
                      data: { "turbo-frame" => "_top" },
                      class: 'btn btn-outline-secondary btn-sm' %>

    </div>
    

    <% if @notes.size > 0 %>
      <%= render partial: 'postit', collection: @notes.limit(5), as: :note %>
      <% if @notes.size > 5 %>
        <div class="text-end">
          <%= link_to raw(%Q[<i class="fas fa-table"></i><span> Alle Notizen</span>]),
                          '#notes-tab',
                          data: { "turbo-frame" => "_top" },
                          class: 'primary-link' %>
        </div>
      <% end %>
    <% end %>
<% end %>

